                ]
            })

            $("#formNivel").validate({
            rules: {
                    ApeyNom: {
                    required: true
                },
            },
            messages: {
                ApeyNom: " El campo Descripción es obligatorio",
            },
            errorElement: "div",
            errorLabelContainer: ".alert-danger"
        });

            //Abrir Modal






            //Editar
            $("#tabla tbody").on("click", '.btn-editar', function () {
                filaSeleccionada = $(this).closest("tr");
                var data = tabladata.row(filaSeleccionada).data();
                abrirModal(data)
            })

            //Eliminar
            $("#tabla tbody").on("click", '.btn-eliminar', function () {
               var Socioseleccionado = $(this).closest("tr");
               var data = tabladata.row(Socioseleccionado).data();
               var Socio={
                        id:data.id,
                        apeyNom:data.apeyNom
               }
               swal({
                    title: "Está Seguro?",
                    text: "Desea eliminar el Socio?",
                    type: "warning",
                    showCancelButton: true,
                    confirmButtonClass: "btn-primary",
                    confirmButtonText: "Si",
                    cancelButtonText: "No",
                    closeOnConfirm: true
                },
                   function () {
                        jQuery.ajax({
                            url: '@Url.Action("DeleteSocio", "Socio")',
                            type: "POST",
                            data: JSON.stringify( Socio),
                            contentType: 'application/json',
                            success: function (data) {
                                if (data.resultado) {
                                    tabladata.row(Socioseleccionado).remove().draw();
                                    // mostrarAlert(data.mensaje)
                                    agregarToast({ tipo: 'exito', titulo: 'Eliminando Socio', descripcion: 'Socio eliminado correctamente.', autoCierre: true })
                                } else {
                                    agregarToast({ tipo: 'error', titulo: 'Eliminando Socio', descripcion: 'No se pudo eliminar el Socio', autoCierre: true });
                                   // swal("No se pudo eliminar", data.mensaje, "error");
                                 //  mostrarAlert(data.mensaje)
                                }
                            },
                            error: function (error) {
                                console.log(error);
                            }
                        })
                   })
            });


            //Guardar
            function Guardar() {

            if (!$("#formNivel").valid()) {
                return;
            }

            var Socio = {
                    id: $("#txtid").val(),
                    apeyNom: $("#txtapeynom").val(),
                }

            jQuery.ajax({
                    url: '@Url.Action("CreateSocio", "Socio")',
                    type: "POST",
                    data: JSON.stringify(Socio),
                    contentType: 'application/json',
                    success: function (data) {
                        $(".modal-body").LoadingOverlay("hide");
                        //  Socio nuevo
                        if (Socio.id == 0) {
                            if (data.resultado != 0) {
                                Socio.id = data.resultado;
                                tabladata.row.add(Socio).draw(false);
                                $("#FormModal").modal("hide");
                                agregarToast({ tipo: 'exito', titulo: 'Creando Socio', descripcion: 'Socio ingresado correctamente.', autoCierre: true });
                            }
                            else {
                                agregarToast({ tipo: 'error', titulo: 'Creando Socio', descripcion: data.mensaje, autoCierre: true });
                                $("#mensajeError").text(data.mensaje);
                                $("#mensajeError").show();
                            }
                        }
                        //  Socio Editar
                        else {

                            if (data.resultado) {
                                tabladata.row(filaSeleccionada).data(Socio).draw(false);
                                filaSeleccionada = null;
                                  agregarToast({ tipo: 'exito', titulo: 'Modificando Socio', descripcion: 'Socio modificado correctamente.', autoCierre: true });
                                $("#FormModal").modal("hide");
