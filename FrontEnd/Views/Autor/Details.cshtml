@model Autor

<form asp-action="UpdateAutor" method="post">
    <input asp-for="Id" hidden />
    <br />
    <div class="container border p-3">
        <h1 class="text-primary">Modificar Autor</h1>
        <hr />
        <div class="row">
            <div asp-asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="col-2">
                <label asp-for="Descripcion" class="control-label pt-2" style="font-size:14px;"></label>
            </div>

            <div class="col-10 pb-3">
                <input asp-for="Descripcion" class="form-control" />
                <span asp-validation-for="Descripcion" class="text-danger"></span>
            </div>

            <br />
            <div class="col-5 offset-2">
                <a asp-action="Index" asp-controller="Autor" class="btn btn-primary form-control">Volver a la lista </a>
            </div>

            <div class="col-5">
                <input type="submit" value="Submit" class="btn btn-success form-control" />
            </div>
        </div>
    </div>
</form>


@section Scripts {

    <partial name="_ValidationScriptsPartial" />
}
