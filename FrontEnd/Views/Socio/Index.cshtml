                ],
                 "ajax": {
                     url: "@Url.Action("GetAllSocios", "Socio")",
                     type: "GET",
                     dataType: "json",
                    beforeSend: agregarToast({ tipo: 'exito', titulo: 'Obteniendo Socios', descripcion: 'Por favor espere...', autoCierre: true })
